<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_comment_nike"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/tv_comment_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_comment_nike"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="17sp"
        android:text="nickname"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/tv_comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_comment_nick"
        android:layout_marginTop="10dp"
        android:text="time"
        />
    <TextView
        android:id="@+id/tv_comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_comment_nick"
        android:layout_toRightOf="@id/iv_comment_nike"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="content"
        android:textStyle="bold"
        android:textColor="#000000"
        />
    <TextView
        android:id="@+id/tv_comment_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reply"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        />
</RelativeLayout>